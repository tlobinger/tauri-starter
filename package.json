{
  "name": "tauri-nextjs-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade Tauri v2 + Next.js 16 starter with SQLite and Drizzle ORM",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd apps/desktop dev",
    "build": "bun --cwd apps/desktop build",
    "tauri:dev": "bun --cwd apps/desktop tauri:dev",
    "tauri:build": "bun --cwd apps/desktop tauri:build",
    "db:generate": "bun --cwd packages/db generate",
    "db:migrate": "bun --cwd packages/db migrate",
    "test": "bun test",
    "test:rust": "cargo test --manifest-path apps/desktop/src-tauri/Cargo.toml",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
