{
  "name": "tauri-nextjs-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade Tauri v2 + Next.js 16 starter with SQLite and Drizzle ORM",
  "packageManager": "bun@1.1.38",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev --filter @tauri-starter/desktop",
    "build": "turbo run build --filter @tauri-starter/desktop",
    "tauri:dev": "turbo run tauri:dev --filter @tauri-starter/desktop",
    "tauri:build": "turbo run tauri:build --filter @tauri-starter/desktop --verbosity 10",
    "mcp:serve": "tauri-mcp --app-path ./apps/desktop serve",
    "db:generate": "turbo run db:generate --filter @tauri-starter/db",
    "db:migrate": "turbo run db:migrate --filter @tauri-starter/db",
    "test": "turbo run test",
    "test:rust": "turbo run test:rust --filter @tauri-starter/desktop",
    "lint": "turbo run lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@tauri-apps/api": "2.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@next/bundle-analyzer": "^16.0.10",
    "@tauri-starter/db": "workspace:*",
    "@types/bun": "^1.3.4",
    "turbo": "^2.6.3"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=20.0.0"
  }
}
